<Window x:Class="Excursion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Excursion"
        mc:Ignorable="d"
        Title="Authorization" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="0,50,0,0">
            <Label Content="Login" HorizontalAlignment="Center"/>
            <TextBox Height="30" Width="250" Name="LoginBox"/>
            <Label Content="Password" HorizontalAlignment="Center" Margin="0,30,0,0"/>
            <PasswordBox Height="30" Width="250" Name="passwordBox"/>
            <Button Content="Log In" FontWeight="ExtraLight" FontSize="16" Height="30"
            Width="250" Margin="0,50,0,0" Background="Transparent" Name="loginBtn" Click="LoginBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
